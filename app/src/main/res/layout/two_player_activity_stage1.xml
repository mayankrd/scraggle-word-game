<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/stage1_layout"
    tools:context="edu.neu.madcourse.mayankranjandayal.two_player_word_game.two_player.TwoPlayerStage1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/white_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            android:id="@+id/title"
            android:layout_width= "match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/button_textsize"
            android:textColor="@color/white_color"
            android:text="@string/stage1"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@color/black_color"/>


        <include
            layout="@layout/two_player_scraggle_game_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <include
            layout="@layout/comm_scraggle_large_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <!-- Control fragment goes here... -->

        <include
            layout="@layout/comm_scraggle_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</FrameLayout>


